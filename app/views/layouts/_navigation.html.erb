<%# navigation styled for Bootstrap 3.0 %>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'TTS Resources', root_url, :class => "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Categories", categories_url %></li>
        <li><%= link_to "Resources", resources_url %></li>
        <li><%= link_to 'About', pages_about_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">

        <%= form_tag("/resources", method: "get", role: "search", class: "navbar-form navbar-left") do %>
          <div class="form-group">
            <%= text_field_tag("search", nil, placeholder: "Search Resources", class: "form-control input-sm") %>
          </div>
          <%= submit_tag("Search", class: "btn btn-default btn-sm") %>
        <% end %>


        <%= render 'devise/menu/registration_items' %>
        <% if user_signed_in? %>
          <li><%= link_to "Favorite resources", favorites_url %></li>
        <% end %>
        <%= render 'devise/menu/login_items' %>


      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>